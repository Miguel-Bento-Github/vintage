rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Products - read public, write admin only
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Orders - guest checkout allowed, read with order ID or email match
    match /orders/{orderId} {
      // Allow reading order if:
      // 1. Admin
      // 2. Authenticated user matches email
      // 3. Public read (for order confirmation page)
      allow read: if true; // Open for order confirmation

      // Allow creating order for guest checkout
      // Validate required fields exist
      allow create: if request.resource.data.customerInfo.email is string &&
                       request.resource.data.items is list &&
                       request.resource.data.paymentIntentId is string &&
                       request.resource.data.total is number;

      // Only admins can update orders
      allow update: if isAdmin();
    }

    // Customers - users can read/write their own data
    match /customers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Admins - admin only read
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Manually managed in console
    }
  }
}
